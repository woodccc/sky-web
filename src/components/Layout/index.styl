.layout
  width 100vw
  height 100vh
  display grid
  grid-template-columns 1fr 4fr
  .side
    box-shadow 0 2px 12px 0 rgba(0, 0, 0, 0.1)
    overflow scroll
    padding-top 32px
    position relative
    .percentage
      width 100%
      position fixed
      left 0
      top 0
  .main
    height 100vh
    display grid
    grid-auto-rows 60px 1fr
    padding 0 32px
    .title
      font-size 24px
      line-height 60px
      color #222
      font-weight 500
      text-align center
      border-bottom 1px solid #eee
    .content
      overflow scroll
